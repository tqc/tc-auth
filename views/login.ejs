<div class="fixedheader">
<div class="container">
            <a href="/">Home</a>
</div>
</div>
<div class="pagebody">
<div class="container">


<% if(user) {%>
<%= user.displayName %>
<%= user.githubId %>
<%= user.bitbucketId %>
<% } %>


    <div class="signupform">
        <div class="intro">
            <p>
            Intro text here...
            </p>
        </div>
        <% if(error && error.length) {%>
            <div class="flash error">
            <%= error %>
            </div>
        <% } %>
        <% if(messages && messages.length) {%>
            <div class="flash">
            <%= messages %>
            </div>
        <% } %>
        <div class="main">
            <div class="box">
            <p>Login with your email address</p>
                <form action="/auth/login" method="POST">
                    <input type="text" name="email" placeholder="email@example.com">
                    <input type="password" name="password" placeholder="Password">
                    <button type="submit">Login</button>
                </form>
            </div>
            <div class="box">
                <p>Or log in with</p>
                <% if(fakeAuth) {%>
                    <a class="social fake"  href="/auth/fake">Fake auth</a>
                <% } %>

                <a class="social github" href="/auth/github">Log in with GitHub</a>
                <a class="social bitbucket" href="/auth/bitbucket">Log in with Bitbucket</a>
                <a class="social facebook" href="/auth/facebook">Log in with Facebook</a>
                <a class="social twitter" href="/auth/twitter">Log in with Twitter</a>
            </div>
        </div>
    </div>



    </div>
</div>
<div class="fixedfooter">
<div class="container">
            <a href="/">Home</a>
</div>
</div>

